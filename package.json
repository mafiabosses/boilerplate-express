{
  "name": "express-rest-boilerplate",
  "version": "0.0.0",
  "private": true,
  "description": "Express boilerplate for building RESTful APIs",
  "repository": {
    "type": "git",
    "url": "git@github.com:danielfsousa/express-rest-boilerplate.git"
  },
  "license": "MIT",
  "author": {
    "name": "Daniel Sousa",
    "email": "sousa.dfs@gmail.com"
  },
  "packageManager": "npm@10.8.1+sha512.0e9d42e92bd2318408ed81eaff2da5f78baf23ee7d12a6eed44a6e2901d0f29d7ab715d1b918ade601f72e769a824d9a5c322383f22bbbda5dd396e79de2a077",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "imports": {
    "#config": "./src/config.js",
    "#controllers/*": "./src/controllers/*.controller.js",
    "#enums/*": "./src/enums/*.enum.js",
    "#errors/*": "./src/errors/*.error.js",
    "#lib/*": "./src/lib/*.js",
    "#middlewares/*": "./src/middlewares/*.middleware.js",
    "#models/*": "./src/models/*.model.js",
    "#routes/*": "./src/routes/*.route.js",
    "#services/*": "./src/services/*.service.js",
    "#validations/*": "./src/validations/*.validation.js"
  },
  "main": "src/main.js",
  "scripts": {
    "check": "biome check",
    "check:ci": "biome ci",
    "dev": "node --env-file=.env --require=./src/lib/tracing.cjs --watch bin/www.js",
    "fix": "biome check --write",
    "format": "biome format --write",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "prepare": "husky",
    "start": "bin/www.js",
    "test": "node --env-file=.env.test node_modules/.bin/vitest",
    "test:cov": "node --env-file=.env.test node_modules/.bin/vitest --coverage"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{js,json,md,yaml,yml,pug}": "prettier --write"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.9.0",
    "@opentelemetry/api": "^1.2.0",
    "@opentelemetry/auto-instrumentations-node": "^0.33.1",
    "@opentelemetry/exporter-jaeger": "^1.7.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.33.0",
    "@opentelemetry/sdk-node": "^0.33.0",
    "bcryptjs": "2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.3",
    "date-fns": "^2.29.3",
    "email-templates": "^8.0.7",
    "envalid": "^7.2.1",
    "express": "^4.15.2",
    "express-async-errors": "^3.1.1",
    "express-pino-logger": "^7.0.0",
    "express-prom-bundle": "^6.5.0",
    "helmet": "^4.6.0",
    "http-status": "^1.5.0",
    "jwt-simple": "0.5.6",
    "lodash-es": "^4.17.21",
    "mongoose": "^8.4.4",
    "nodemailer": "^6.3.1",
    "openapi-validator-middleware": "^3.2.3",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "4.0.0",
    "pino": "^8.7.0",
    "pino-pretty": "^9.1.1",
    "pug": "^3.0.1",
    "swagger-ui-express": "^4.1.6",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@testcontainers/mongodb": "^10.10.0",
    "@vitest/coverage-c8": "^0.24.3",
    "husky": "^9.0.11",
    "supertest": "^6.1.3",
    "testcontainers": "^10.10.0",
    "vitest": "^0.23.4"
  }
}
